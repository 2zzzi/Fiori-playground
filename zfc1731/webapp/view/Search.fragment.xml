<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>

<Panel headerText="Search" expandable="true" expanded="true" width="50%">

    <Toolbar>
        <content>
            <Title text="Search Input" />
            <ToolbarSpacer />
            <Button icon="sap-icon://search" press="onSearch" />
        </content>
    </Toolbar>

    <content>
        <Label text="Student Info" width="50%"/>
        <Input id="inpStdno" value="{/inpStdno}" width="50%" />
    </content>

</Panel>

</core:FragmentDefinition>