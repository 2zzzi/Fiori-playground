<mvc:View controllerName="sync4.zfc17071.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Page id="page" title="{i18n>title}">
        <content> 
            <f:Form>
                <f:title> <core:Title text="Student Info" /> </f:title>
                <f:layout><f:ResponsiveGridLayout /></f:layout>

                <f:formContainers>
                    <f:FormContainer>
                        <f:title> <core:Title text="Basic Info" /> </f:title>
                        <f:formElements>
                            <f:FormElement>
                                <f:label> 
                                    <Label text="Std Name" />
                                </f:label>

                                <f:fields>
                                    <Input value="Kang" />
                                    <Input value="SK" />
                                </f:fields>
                            </f:FormElement>

                            <f:FormElement>
                                <f:label> 
                                    <Label text="Class Name" />
                                </f:label>

                                <f:fields>
                                    <Input value="SYNC 4 Class" />
                                </f:fields>
                            </f:FormElement>

                            
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </content>
    </Page>
</mvc:View>
